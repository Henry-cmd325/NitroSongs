<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="NitroSongs.Modules.Songs.Views.SongsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NitroSongs.Modules.Songs.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:viewmodels="using:NitroSongs.Modules.Songs.ViewModels" 
    xmlns:common="using:NitroSongs.Common.Dtos"
    xmlns:pager="using:NitroSongs.UserControls.Pager"
    d:DataContext="{d:DesignInstance Type=viewmodels:SongsViewModel}"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Estilos personalizados -->
        <Style x:Key="SongCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="TagStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource AccentFillColorSecondaryBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
        </Style>

        <!-- DataTemplate para las canciones -->
        <DataTemplate x:Key="SongItemTemplate" x:DataType="common:SongDto">
            <Border Style="{StaticResource SongCardStyle}" Margin="5,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Título y Artista -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,8">
                        <TextBlock Text="{x:Bind Title}" 
                                 FontSize="18" 
                                 FontWeight="SemiBold"
                                 TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{x:Bind Author}" 
                                 FontSize="14" 
                                 Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Información musical -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="16" Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <FontIcon Glyph="&#xE90B;" FontSize="12"/>
                            <TextBlock Text="{x:Bind Tone}" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <FontIcon Glyph="&#xE916;" FontSize="12"/>
                            <TextBlock Text="{x:Bind Genre}" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <FontIcon Glyph="&#xE9D9;" FontSize="12"/>
                            <TextBlock Text="Es privado: "></TextBlock>
                            <CheckBox IsChecked="{x:Bind IsPrivate}"></CheckBox>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <!-- Layout principal
         Grid con filas: Header, Filtros, GridView (*), Pager -->
    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filtros -->
            <RowDefinition Height="*"/>
            <!-- Lista (ocupa sobrante) -->
            <RowDefinition Height="Auto"/>
            <!-- Pager -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Mi Biblioteca" FontSize="32" FontWeight="Bold"/>
                <TextBlock Text="Explora y organiza tu colección de canciones"
                           FontSize="16"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <AutoSuggestBox x:Name="SearchBox"
                                PlaceholderText="Buscar canciones, artistas..."
                                QueryIcon="Find"
                                Width="300"/>
                <Button Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE710;" FontSize="14"/>
                        <TextBlock Text="Nueva Canción"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Filtros (scroll horizontal solamente) -->
        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      HorizontalScrollMode="Auto"
                      VerticalScrollBarVisibility="Disabled"
                      VerticalScrollMode="Disabled">
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,10,0,0">
                <ToggleButton Content="Todas" IsChecked="True" Style="{ThemeResource ToggleButtonRevealStyle}"/>
                <ToggleButton Content="Rock" Style="{ThemeResource ToggleButtonRevealStyle}"/>
                <ToggleButton Content="Pop" Style="{ThemeResource ToggleButtonRevealStyle}"/>
                <ToggleButton Content="Folk" Style="{ThemeResource ToggleButtonRevealStyle}"/>
                <ToggleButton Content="Blues" Style="{ThemeResource ToggleButtonRevealStyle}"/>
                <ToggleButton Content="País" Style="{ThemeResource ToggleButtonRevealStyle}"/>
                <ToggleButton Content="Clásicas" Style="{ThemeResource ToggleButtonRevealStyle}"/>
            </StackPanel>
        </ScrollViewer>

        <GridView Grid.Row="2"
                  x:Name="SongsGridView"
                  ItemsSource="{x:Bind ViewModel.Songs, Mode=OneWay}"
                  ItemTemplate="{StaticResource SongItemTemplate}"
                  SelectionMode="None"
                  IsItemClickEnabled="True">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal"
                                   ItemWidth="320"
                                   ItemHeight="200"
                                   HorizontalAlignment="Left"
                                   FocusVisualPrimaryBrush="Transparent"
                                   FocusVisualSecondaryBrush="Transparent"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>

        <!-- Pager siempre abajo -->
        <pager:PagerControl Grid.Row="3"
                            CurrentPage="{x:Bind ViewModel.PageIndex, Mode=TwoWay}"
                            TotalPages="{x:Bind ViewModel.TotalPages, Mode=OneWay}"
                            PageChanged="Pager_PageChanged"/>
    </Grid>
</Page>
