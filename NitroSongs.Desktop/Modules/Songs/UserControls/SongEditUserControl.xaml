<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="NitroSongs.Modules.Songs.UserControls.SongEditUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NitroSongs.Modules.Songs.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:NitroSongs.Modules.Songs.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:SongEditViewModel}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="ChordButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#252730"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#2b3544"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Height" Value="45"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <!-- Left Panel - Chords -->
        <Border Grid.Column="0" 
                Background="{StaticResource BackgroundPrimaryBrush}" 
                CornerRadius="12"
                Margin="0,0,15,0">  

            <ScrollViewer>
                <StackPanel Margin="20">
                    <!-- Acordes Header -->
                    <TextBlock Text="Acordes" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,10"/>

                    <TextBlock Text="Arrastra los acordes a la letra" 
                       Foreground="#94a3b8" 
                       FontSize="12" 
                       Margin="0,0,0,15"/>

                    <!-- Show Diagrams Toggle -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Mostrar diagramas:" 
                           Foreground="#94a3b8" 
                           FontSize="12" 
                           VerticalAlignment="Center"/>
                        <ToggleSwitch x:Name="ShowDiagramsToggle" 
                              IsOn="True"
                              Foreground="#94a3b8"
                              Margin="10,0,0,0"
                              Width="5"/>
                    </StackPanel>

                    <!-- Mayores -->
                    <TextBlock Text="Mayores" 
                       Foreground="#3b82f6" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Row 1 -->
                        <Button Grid.Row="0" Grid.Column="0" Content="C" Style="{StaticResource ChordButtonStyle}" Margin="0,0,5,5"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="D" Style="{StaticResource ChordButtonStyle}" Margin="2.5,0,2.5,5"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="E" Style="{StaticResource ChordButtonStyle}" Margin="5,0,0,5"/>

                        <!-- Row 2 -->
                        <Button Grid.Row="1" Grid.Column="0" Content="F" Style="{StaticResource ChordButtonStyle}" Margin="0,2.5,5,2.5"/>
                        <Button Grid.Row="1" Grid.Column="1" Content="G" Style="{StaticResource ChordButtonStyle}" Margin="2.5,2.5,2.5,2.5"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="A" Style="{StaticResource ChordButtonStyle}" Margin="5,2.5,0,2.5"/>

                        <!-- Row 3 -->
                        <Button Grid.Row="2" Grid.Column="0" Content="B" Style="{StaticResource ChordButtonStyle}" Margin="0,5,5,0"/>
                    </Grid>

                    <!-- Menores -->
                    <TextBlock Text="Menores" 
                       Foreground="#3b82f6" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="0" Content="Cm" Style="{StaticResource ChordButtonStyle}" Margin="0,0,5,5"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="Dm" Style="{StaticResource ChordButtonStyle}" Margin="2.5,0,2.5,5"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="Em" Style="{StaticResource ChordButtonStyle}" Margin="5,0,0,5"/>

                        <Button Grid.Row="1" Grid.Column="0" Content="Fm" Style="{StaticResource ChordButtonStyle}" Margin="0,2.5,5,2.5"/>
                        <Button Grid.Row="1" Grid.Column="1" Content="Gm" Style="{StaticResource ChordButtonStyle}" Margin="2.5,2.5,2.5,2.5"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="Am" Style="{StaticResource ChordButtonStyle}" Margin="5,2.5,0,2.5"/>

                        <Button Grid.Row="2" Grid.Column="0" Content="Bm" Style="{StaticResource ChordButtonStyle}" Margin="0,5,5,0"/>
                    </Grid>

                    <!-- SÃ©ptimas -->
                    <TextBlock Text="SÃ©ptimas" 
                       Foreground="#3b82f6" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="0" Content="C7" Style="{StaticResource ChordButtonStyle}" Margin="0,0,5,5"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="D7" Style="{StaticResource ChordButtonStyle}" Margin="2.5,0,2.5,5"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="E7" Style="{StaticResource ChordButtonStyle}" Margin="5,0,0,5"/>

                        <Button Grid.Row="1" Grid.Column="0" Content="F7" Style="{StaticResource ChordButtonStyle}" Margin="0,5,5,0"/>
                        <Button Grid.Row="1" Grid.Column="1" Content="G7" Style="{StaticResource ChordButtonStyle}" Margin="2.5,5,2.5,0"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="A7" Style="{StaticResource ChordButtonStyle}" Margin="5,5,0,0"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Center Panel - Lyrics Editor -->
        <Border Grid.Column="1" 
                Background="{StaticResource BackgroundPrimaryBrush}"
                CornerRadius="12"
                Margin="0,0,15,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Editor Header -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                       Text="Editor de Letra"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="20,20,20,15"/>

                    <Button Grid.Column="1"
                            x:Name="BtnMode"
                            Content="{Binding BtnText}"
                            Command="{Binding SwitchModeCommand}"
                            VerticalAlignment="Center"
                            Margin="0,20,20,15"/>
                    <!-- Or Modo Visual-->
                </Grid>


                <!-- Tip -->
                <Border Grid.Row="1" 
                Background="#1e293b" 
                CornerRadius="8" 
                Margin="20,0,20,15">
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="15,12">
                        <TextBlock Text="ðŸ’¡" FontSize="14"/>
                        <TextBlock Foreground="#9ca3af" FontSize="12">
                    <Run FontWeight="SemiBold">Tip:</Run>
                    <Run Text=" Arrastra los acordes desde el panel izquierdo hasta donde quieras colocarlos en la letra. Los acordes aparecerÃ¡n justo encima de la palabra donde los sueltes."/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Lyrics Content -->
                <ScrollViewer Grid.Row="2" x:Name="LyricsTextBlock" x:Load="{x:Bind ViewModel.IsVisualMode, Mode=OneWay}"  Margin="20,0,20,20">
                    <StackPanel x:Name="LyricsContainer">

                        <!-- Verse 1 -->
                        <TextBlock Text="Verse 1:" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,15"/>

                        <!-- First Line with Chords -->
                        <StackPanel Margin="0,0,0,10">
                            <!-- Chord Line -->
                            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,5">
                                <Border Background="#222b3f" 
                                CornerRadius="4" 
                                Padding="8,4"
                                Margin="0,0,80,0">
                                    <TextBlock Text="C" 
                                       Foreground="#3b82f6" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="#222b3f" 
                                CornerRadius="4" 
                                Padding="8,4">
                                    <TextBlock Text="G" 
                                       Foreground="#3b82f6" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>

                            <!-- Lyrics Line -->
                            <TextBlock Text="Esta es la primera lÃ­nea de mi canciÃ³n" 
                               Foreground="#e2e8f0" 
                               FontSize="14" 
                               FontFamily="Consolas"/>
                        </StackPanel>

                        <!-- Second Line with Chord -->
                        <StackPanel Margin="0,0,0,20">
                            <!-- Chord Line -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <Border Background="#222b3f" 
                                CornerRadius="4" 
                                Padding="8,4"
                                Margin="0,0,0,0">
                                    <TextBlock Text="Am" 
                                       Foreground="#3b82f6" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>

                            <!-- Lyrics Line -->
                            <TextBlock Text="Y esta es la segunda lÃ­nea con mÃ¡s letra" 
                               Foreground="#e2e8f0" 
                               FontSize="14" 
                               FontFamily="Consolas"/>
                        </StackPanel>

                        <!-- Chorus -->
                        <TextBlock Text="Chorus:" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,20,0,15"/>

                        <!-- Chorus Line with Chords -->
                        <StackPanel Margin="0,0,0,10">
                            <!-- Chord Line -->
                            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,5">
                                <Border Background="#222b3f" 
                                CornerRadius="4" 
                                Padding="8,4"
                                Margin="0,0,60,0">
                                    <TextBlock Text="F" 
                                       Foreground="#3b82f6" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="#222b3f" 
                                CornerRadius="4" 
                                Padding="8,4">
                                    <TextBlock Text="C" 
                                       Foreground="#3b82f6" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>

                            <!-- Lyrics Line -->
                            <TextBlock Text="Este es el coro que todos cantarÃ¡n" 
                               Foreground="#e2e8f0" 
                               FontSize="14" 
                               FontFamily="Consolas"/>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>

                <TextBox Margin="20,0,20,20" x:Name="LyricsTextBox" x:Load="{x:Bind ViewModel.IsTextMode, Mode=OneWay}" Text="{x:Bind Lyrics, Mode=TwoWay}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
