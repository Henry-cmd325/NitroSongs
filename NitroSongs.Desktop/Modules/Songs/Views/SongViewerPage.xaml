<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="NitroSongs.Modules.Songs.Views.SongViewerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NitroSongs.Modules.Songs.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:NitroSongs.Modules.Songs.UserControls"
    xmlns:vm="using:NitroSongs.Modules.Songs.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:SongViewerViewModel}"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <Style x:Key="ChordButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#252730"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#2b3544"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Height" Value="45"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{StaticResource BackgroundSecondaryBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title and Artist -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="15">
                <TextBox x:Name="TitleTextBox" 
                         Text="Mi CanciÃ³n" 
                         Background="{StaticResource BackgroundPrimaryBrush}" 
                         Foreground="{StaticResource ForegroundSecondaryBrush}"
                         BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                         CornerRadius="8"
                         Padding="12,8"
                         MinWidth="150"
                         FontSize="14"/>

                <TextBox x:Name="ArtistTextBox" 
                         Text="Artista" 
                         Background="{StaticResource BackgroundPrimaryBrush}" 
                         Foreground="{StaticResource ForegroundSecondaryBrush}"
                         BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                         CornerRadius="8"
                         Padding="12,8"
                         MinWidth="150"
                         FontSize="14"/>
            </StackPanel>

            <!-- Action Buttons -->
            <Border Grid.Column="1" Background="#1f2937" CornerRadius="20" Margin="0,0,15,0">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="ViewBtn"
                            Background="#3b82f6"
                            CornerRadius="15"
                            Content="Ver"
                            BorderBrush="Transparent"
                            Click="ViewBtn_Click"/>

                    <Button x:Name="EditBtn"
                            Background="Transparent"
                            CornerRadius="15"
                            Content="Editar"
                            BorderBrush="Transparent"
                            Click="EditBtn_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="1">
            <controls:SongViewerControl x:Name="Viewer"
                                        x:Load="{x:Bind ViewModel.IsViewMode, Mode=OneWay}"
                                        Lyrics="{x:Bind ViewModel.Lyrics, Mode=OneWay}"/>

            <controls:SongEditUserControl x:Name="EditForm"
                                          x:Load="{x:Bind ViewModel.IsEditMode, Mode=OneWay}"
                                          Lyrics="{x:Bind ViewModel.Lyrics, Mode=OneWay}"/>
        </Grid>
    </Grid>
</Page>
