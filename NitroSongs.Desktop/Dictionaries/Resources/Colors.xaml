    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:clr="using:NitroSongs">

    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="#141420"></SolidColorBrush>
    <SolidColorBrush x:Key="ForegroundPrimaryBrush" Color="#cdd6f4"></SolidColorBrush>
    
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="#242431"></SolidColorBrush>
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="#8e94ad"></SolidColorBrush>
    
    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#303041"></SolidColorBrush>
    <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="#454554"></SolidColorBrush>

    <SolidColorBrush x:Key="BackgroundSelectedBrush" Color="#2b344c"></SolidColorBrush>
    <SolidColorBrush x:Key="ForegroundSelectedBrush" Color="#85aff3"></SolidColorBrush>
</ResourceDictionary>
