<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="NitroSongs.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NitroSongs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="NitroSongs">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <NavigationView Name="MainNavigationView"
                IsBackButtonVisible="Collapsed"
                IsSettingsVisible="True"
                PaneDisplayMode="Left"
                IsPaneToggleButtonVisible="True"
                OpenPaneLength="280"
                Background="{StaticResource BackgroundPrimaryBrush}">

        <!-- Configuración del menú -->
        <NavigationView.MenuItems>
            <NavigationViewItem Tag="Home" Icon="Home" Content="Inicio" Foreground="{StaticResource ForegroundPrimaryBrush}"/>
            <NavigationViewItem Tag="AllSongs" Content="Todas las Canciones" Foreground="{StaticResource ForegroundPrimaryBrush}">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE8D6;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Tag="Favorites" Icon="Favorite" Content="Favoritas" Foreground="{StaticResource ForegroundPrimaryBrush}"/>
            <NavigationViewItem Tag="Playlists" Content="Listas de Reproducción" Foreground="{StaticResource ForegroundPrimaryBrush}">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE93C;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <NavigationViewItemHeader Content="HERRAMIENTAS"/>
            <NavigationViewItem Tag="Chords" Content="Acordes" Foreground="{StaticResource ForegroundPrimaryBrush}">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE90B;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Tag="Transpose" Content="Transposición" Foreground="{StaticResource ForegroundPrimaryBrush}">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE8AB;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Tag="Metronome" Content="Metrónomo" Foreground="{StaticResource ForegroundPrimaryBrush}">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE916;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <!-- Panel inferior con estadísticas -->
        <NavigationView.PaneFooter>
            <StackPanel Margin="16,8">
                <Border Background="{ThemeResource BackgroundSecondaryColor}" 
                  CornerRadius="8" Padding="12">
                    <StackPanel>
                        <TextBlock Text="ESTADÍSTICAS" 
                             FontSize="12" 
                             FontWeight="SemiBold"
                             Foreground="{ThemeResource ForegroundSecondaryColor}"
                             Margin="0,0,0,8"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Canciones" FontSize="13"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="247" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Artistas" FontSize="13"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="89" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Listas" FontSize="13"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="12" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Horas" FontSize="13"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="142" FontWeight="SemiBold"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </NavigationView.PaneFooter>

        <Frame Name="ContentFrame"/>
        
    </NavigationView>
</Window>
